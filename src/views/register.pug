extends layout

block content
  div.container
    h3 Register
    br
    form#register-form(method='POST' action='/register')
      div.form-group
        label(for='username') Username:
        input#username.form-control(type='text', placeholder='Username' name='username')
      div.form-group
        label(for='pass') Password:
        input#pass.form-control(type='password', placeholder='Password' name='password')
      div.form-group
        label(for='pass2') Confirm Password:
        input#pass2.form-control(type='password' placeholder='password' name='confirmPassword')

      mixin alertBody
        h5.alert-heading Errors
        p(name='errors')= errors
        button.close#close-errors(aria-label='Close' type='button')
          span(aria-hidden='true') &times;

      if errors
        div.alert.alert-secondary.alert-dismissible#register-errors(role='alert')
          +alertBody
      else
        div.alert.alert-secondary.alert-dismissible.hidden#register-errors(role='alert')
          +alertBody

      button.btn.btn-lg.btn-outline-primary.btn-block(type='submit') Register

block scripts
  script(src="/js/register.js")